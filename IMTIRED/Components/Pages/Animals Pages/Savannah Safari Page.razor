@page "/animals/savannah"
@using Microsoft.AspNetCore.Components

<PageTitle>Savannah Safari Adventure!</PageTitle>

<div class="container">
    <header class="page-header">
        <h1 class="header-title">Savannah Safari Adventure!</h1>
        <p class="header-subtitle">Meet the majestic animals of the wild savannah!</p>
        <div class="start-button">
            <button class="btn-start">Start Your Adventure!</button>
        </div>
    </header>

    <section class="animals-list">
        <div class="animal-card">
            <img src="/images/LION.jpg" alt="Lion" class="animal-image lion" />
            <div class="animal-details">
                <h2 class="animal-name">Lion</h2>
                <p class="animal-description">Roar! The Lion is the king of the savannah. Did you know their roars can be heard from miles away?</p>
                <button class="btn-learn-more">Learn More</button>
            </div>
        </div>
        <div class="animal-card">
            <img src="/images/Elephant%20in%20the%20wild.jpg" alt="Elephant" class="animal-image elephant" />
            <div class="animal-details">
                <h2 class="animal-name">Elephant</h2>
                <p class="animal-description">Big ears and a long trunk! Elephants are amazing at communicating with each other.</p>
                <button class="btn-learn-more">Learn More</button>
            </div>
        </div>
        <div class="animal-card">
            <img src="/images/giraffe-in-zoo.jpg" alt="Giraffe" class="animal-image giraffe" />
            <div class="animal-details">
                <h2 class="animal-name">Giraffe</h2>
                <p class="animal-description">With long necks, giraffes can reach the highest branches of trees to munch on leaves!</p>
                <button class="btn-learn-more">Learn More</button>
            </div>
        </div>
        <div class="animal-card">
            <img src="/images/zEBRA.png" alt="Zebra" class="animal-image zebra" />
            <div class="animal-details">
                <h2 class="animal-name">Zebra</h2>
                <p class="animal-description">No two zebras have the same stripes! It’s their special fingerprint!</p>
                <button class="btn-learn-more">Learn More</button>
            </div>
        </div>
    </section>

    <section class="fun-facts">
        <h3>Fun Facts!</h3>
        <div class="fact-box">
            <div class="fact-item">
                <p>Did you know? A lion's roar can be heard from up to 5 miles away!</p>
            </div>
            <div class="fact-item">
                <p>Elephants are the only animals that can’t jump!</p>
            </div>
            <div class="fact-item">
                <p>Giraffes sleep only 30 minutes a day!</p>
            </div>
            <div class="fact-item">
                <p>Zebras can sleep standing up, just like horses!</p>
            </div>
        </div>
    </section>

    <footer class="page-footer">
        <p>Stay curious and keep exploring the savannah. New animal friends are waiting for you!</p>
    </footer>
</div>

