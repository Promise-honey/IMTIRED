@page "/animals/elephants"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elephants: Gentle Giants</title>
    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&family=Fredoka+One&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Comic Neue', cursive;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
            color: #2c3e50;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .hero {
            background: url('/images/elephant-hero.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 100px 20px;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.5);
            }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            font-family: 'Fredoka One', cursive;
            font-size: 4rem;
            margin-bottom: 20px;
            text-shadow: 3px 3px 0 #4b5c42;
        }

        .fact-grid {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: -50px;
            position: relative;
            z-index: 2;
        }

        .fact-card {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transform: perspective(500px);
            transition: transform 0.3s;
        }

            .fact-card:hover {
                transform: scale(1.05) rotate(3deg);
            }

            .fact-card h3 {
                font-family: 'Fredoka One', cursive;
                color: #4b5c42;
            }

            .fact-card .emoji {
                font-size: 3rem;
                margin-bottom: 15px;
            }

        .cta-button {
            display: inline-block;
            background-color: #4b5c42;
            color: white;
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            transition: transform 0.3s, background-color 0.3s;
        }

            .cta-button:hover {
                background-color: #4b5c42;
                transform: scale(1.1);
            }

        .photo-gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 50px 0;
        }

            .photo-gallery img {
                max-width: 250px;
                border-radius: 15px;
                box-shadow: 0 10px 20px rgba(0,0,0,0.2);
                transition: transform 0.3s;
            }

                .photo-gallery img:hover {
                    transform: rotate(5deg) scale(1.1);
                }

        .quiz-section {
            background-color: #4b5c42;
            color: white;
            text-align: center;
            padding: 50px 0;
        }

        .map-section {
            background-color: #ecf0f1;
            padding: 50px 0;
            text-align: center;
        }

            .map-section iframe {
                max-width: 100%;
                border-radius: 15px;
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }


    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero">
        <div class="hero-content">
            <h1>Elephants: Gentle Giants!</h1>
            <p>Discover the Most Amazing Animals on the Planet!</p>
            <a href="#facts" class="cta-button">Explore Now!</a>
        </div>
    </div>

    <!-- Fact Grid Section -->
    <div class="container fact-grid">
        <div class="fact-card">
            <div class="emoji">🌍</div>
            <h3>GIANT SIZE!</h3>
            <p>Elephants are HUGE! They can weigh as much as 13 big cars!</p>
        </div>
        <div class="fact-card">
            <div class="emoji">🧠</div>
            <h3>SUPER SMART!</h3>
            <p>Elephants remember everything and have best friends for life!</p>
        </div>
        <div class="fact-card">
            <div class="emoji">🌱</div>
            <h3>MUNCHING MACHINES!</h3>
            <p>They eat 300 pounds of yummy plants every single day!</p>
        </div>
    </div>

    <!-- Photo Gallery -->
    <div class="container photo-gallery">
        <img src="/images/Elephant in the wild.jpg" alt="Elephant in the wild" />
        <img src="/images/Elephant family.jpeg" alt="Elephant family" />
        <img src="/images/Elephant at a sanctuary.jpeg" alt="Elephant bathing" />
        <img src="/images/elephant.jpg" alt="Elephant at sunset" />
    </div>

    <!-- Quiz Section -->
    <div class="quiz-section">
        <h2>Think You Know Elephants?</h2>
        <p>Take our AWESOME Elephant Quiz!</p>
        <a href="/quiz/elephants" class="cta-button">START QUIZ!</a>
    </div>

    <!-- Map Section -->
    <div class="map-section">
        <h2>Where Do Elephants Live?</h2>
        <iframe src="https://www.google.com/maps/embed?..."
                width="800"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy">
        </iframe>
    </div>
</body>
</html>