@page "/contact"

<!-- Navigation Bar -->
<nav style="background-color: #2D3A2B; color: white; padding: 20px 10px; display: flex; justify-content: space-between; align-items: center;">
    <div style="font-size: 24px; font-weight: bold;">WildHaven Zoo</div>
    <ul style="list-style: none; display: flex; margin: 0; padding: 0; gap: 20px;">
        <li><a href="/" style="color: white; text-decoration: none;">Home</a></li>
        <li><a href="/animals" style="color: white; text-decoration: none;">Animals & Exhibits</a></li>
        <li><a href="/news" style="color: white; text-decoration: none;">Zoo News</a></li>
        <li><a href="/blog" style="color: white; text-decoration: none;">Blog</a></li>
    </ul>
</nav>

<!-- Header Section with an Interactive Background -->
<header style="position: relative; background: url('/images/bg%202.jpg') no-repeat center center/cover; height: 350px; color: white; text-align: center; padding-top: 100px; display: flex; justify-content: center; align-items: center; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);">
    <h1 style="font-size: 60px; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7); font-weight: bold; text-transform: uppercase;">Contact Us</h1>
</header>


<!-- Main Content Section -->
<section style="background-color: #F2F2F2; padding: 50px 10px; text-align: center; box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);">
    <h2 style="font-size: 36px; color: #2D3A2B; font-weight: bold; margin-bottom: 30px;">We'd Love to Hear From You!</h2>
    <p style="font-size: 18px; color: #555; max-width: 800px; margin: 0 auto; line-height: 1.6;">
        Whether you have questions about our animals, programs, or events, or if you'd just like to say hello, we're always here for you. Drop us a message and we'll get back to you soon!
    </p>
</section>

<!-- Contact Form Section -->
<section style="background-color: #F9F9F9; padding: 50px 10px; display: flex; justify-content: center; align-items: center;">
    <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); width: 100%; max-width: 800px;">
        <h3 style="font-size: 28px; color: #2D3A2B; font-weight: bold; margin-bottom: 30px;">Send Us A Message</h3>
        <form>
            <div style="display: grid; gap: 15px;">
                <div>
                    <input type="text" placeholder="Your Name" style="width: 100%; padding: 15px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
                </div>
                <div>
                    <input type="email" placeholder="Your Email" style="width: 100%; padding: 15px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
                </div>
                <div>
                    <textarea placeholder="Your Message" style="width: 100%; padding: 15px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; height: 200px;"></textarea>
                </div>
                <button type="submit" style="background-color: #F9A825; color: white; border: none; padding: 15px 30px; font-size: 18px; font-weight: bold; border-radius: 30px; cursor: pointer; transition: background-color 0.3s ease, transform 0.3s ease;">
                    Send Message
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Interactive Map Section -->
<section style="background-color: #2D3A2B; padding: 50px 10px; text-align: center; color: white;">
    <h2 style="font-size: 36px; font-weight: bold; margin-bottom: 20px;">Find Us Here</h2>
    <p style="font-size: 18px; max-width: 700px; margin: 0 auto; line-height: 1.6;">We're located in the heart of the city, and we can't wait to welcome you. Get directions to WildHaven Zoo below.</p>

    <!-- Embed a Google Map -->
    <iframe style="margin-top: 30px; border: 0; width: 100%; height: 400px; border-radius: 10px;" src="https://www.google.com/maps/embed?pb=..." allowfullscreen="" loading="lazy"></iframe>
</section>

<!-- Footer Section -->
<footer style="background-color: #2D3A2B; color: white; text-align: center; padding: 30px 10px;">
    <h2 style="font-size: 36px; font-weight: bold; color: #F9A825;">Join Our Community!</h2>
    <p style="font-size: 18px; margin-top: 10px; color: #E0E0E0;">Stay connected with us for more updates, conservation stories, and upcoming events. Become a WildHaven member today!</p>

    <a href="/shop" style="text-decoration: none;">
        <button style="background-color: #F9A825; color: white; border: none; padding: 15px 30px; font-size: 20px; font-weight: bold; border-radius: 30px; cursor: pointer; transition: background-color 0.3s ease, transform 0.3s ease;">
            Subscribe Now
        </button>
    </a>

    <p style="margin-top: 20px; font-size: 14px; color: #E0E0E0;">Contact Us: info@wildhavenzoo.com | Call: 123-456-7890</p>
</footer>

<style>
    /* Hover Effect for the Submit Button */
    footer button:hover {
        background-color: #C17900; /* Darker shade of yellow for hover */
        transform: scale(1.05); /* Slightly enlarge the button on hover */
    }

    footer button:active {
        background-color: #9E6F00; /* Even darker shade for active state */
        transform: scale(1); /* Return to normal size on click */
    }

    /* Interactive form */
    form input, form textarea {
        transition: all 0.3s ease;
    }

        form input:focus, form textarea:focus {
            border-color: #F9A825;
            box-shadow: 0 0 8px rgba(249, 168, 37, 0.8);
        }

    form button:hover {
        background-color: #C17900; /* Darker shade of yellow for hover */
        transform: scale(1.1);
    }
</style>
