@using IMTIRED.Models
@using IMTIRED.Services
@inject CustomerService CustomerService
@inject NavigationManager NavigationManager
@using IMTIRED.Utilities
@inject UserSession UserSession

@page "/shop"

<PageTitle>Shop - WildHaven Zoo</PageTitle>

<div class="shop-container">
    <h3>Shop - Membership Options</h3>

    <div class="membership-options">
        <div class="membership-option">
            <img src="images/deer-in-zoo.jpg" alt="Standard Membership" class="membership-img" />
            <h4>Standard Membership</h4>
            <p>Get unlimited access to the zoo, discounts on food and merchandise, and special members-only events.</p>
            <p><strong>Price:</strong> £50 per year</p>
            <button @onclick="NavigateToCheckout" class="join-button">Join Now</button>
        </div>
        <div class="membership-option">
            <img src="images/lion-in-zoo.jpg" alt="Family Membership" class="membership-img" />
            <h4>Family Membership</h4>
            <p>Enjoy unlimited access for up to 4 family members, along with exclusive family events and discounts.</p>
            <p><strong>Price:</strong> £120 per year</p>
            <button @onclick="NavigateToCheckout" class="join-button">Join Now</button>
        </div>
        <div class="membership-option">
            <img src="/images/tiger-in-zoo.jpg" alt="VIP Membership" class="membership-img" />
            <h4>VIP Membership</h4>
            <p>Get all the perks of the Standard and Family memberships, plus VIP access to animal experiences and priority booking for special events.</p>
            <p><strong>Price:</strong> £250 per year</p>
            <button @onclick="NavigateToCheckout" class="join-button">Join Now</button>
        </div>
    </div>

    <div class="membership-benefits">
        <h4>Why Become a Member?</h4>
        <ul>
            <li>Unlimited access to WildHaven Zoo.</li>
            <li>Exclusive members-only events and experiences.</li>
            <li>Discounts on food, merchandise, and special events.</li>
            <li>Free or discounted entry to seasonal events and exhibits.</li>
        </ul>
        <p>Join now and support wildlife conservation efforts while enjoying all these incredible benefits!</p>
    </div>
</div>

@code {
    // Navigate to the checkout page when the "Join Now" button is clicked
    private void NavigateToCheckout()
    {
        // Redirect to a checkout or payment page (you can update this with the correct URL)
        NavigationManager.NavigateTo("/checkout");
    }
}

