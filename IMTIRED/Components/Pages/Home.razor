@page "/"
@using Microsoft.AspNetCore.Components

<PageTitle>Home - WildHaven Zoo</PageTitle>

<!-- Hero Section -->
<div class="hero">
    <img src="images/tiger-in-zoo.jpg" alt="Tiger at WildHaven Zoo" class="hero-image" />
    <h1>WildHaven Zoo</h1>

    <!-- Slideshow Dots -->
    <div class="slideshow-dots">
        @for (int i = 0; i < Images.Length; i++)
        {
            <button class="dot @(i == currentImageIndex ? "active" : "")" @onclick="() => ChangeSlideshowImage(i)"></button>
        }
    </div>
</div>

<!-- Info Cards Section -->
<div class="info-cards">
    <div class="info-card">
        <i class="fa fa-clock"></i>
        <p>Opening Times</p>
    </div>
    <div class="info-card">
        <i class="fa fa-ticket-alt"></i>
        <p>Plan Your Visit</p>
    </div>
    <div class="info-card">
        <i class="fa fa-map-signs"></i>
        <p>Zoo Map</p>
    </div>
    <div class="info-card">
        <i class="fa fa-location-arrow"></i>
        <p>Location</p>
    </div>
</div>

@code {
    private string[] Images = new string[] {
        "images/tiger-in-zoo.jpg",
        "images/lion-in-zoo.jpg",
        "images/deer-in-zoo.jpg",
        "images/giraffe-in-zoo.jpg"
    };

    private int currentImageIndex = 0;

    private void ChangeSlideshowImage(int index)
    {
        currentImageIndex = index;
    }
}

<style>
    /* Hero Section */
    .hero {
        position: relative;
        height: 500px;
        overflow: hidden;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero h1 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 4rem;
        font-family: 'Comic Sans MS', cursive;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* Slideshow Dots */
    .slideshow-dots {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.6);
        border: none;
        cursor: pointer;
    }

        .dot.active {
            background-color: white;
        }

    /* Info Cards */
    .info-cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        max-width: 1200px;
        margin: -4rem auto 0;
        padding: 0 1rem;
        position: relative;
        z-index: 10;
    }

    .info-card {
        background-color: #5B7553;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        color: white;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .info-card:hover {
            transform: translateY(-0.25rem);
        }

        .info-card i {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .info-card p {
            font-size: 1.125rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }
</style>
