@using IMTIRED.Models
@using IMTIRED.Services
@inject CustomerService CustomerService
@inject NavigationManager NavigationManager
@using IMTIRED.Utilities
@inject UserSession UserSession
@page "/"
@using Microsoft.AspNetCore.Components

<PageTitle>Home - WildHaven Zoo</PageTitle>

<!-- Hero Section -->
<div class="hero">
    <img src="images/tiger-in-zoo.jpg" alt="Tiger at WildHaven Zoo" class="hero-image" />
    <h1>WildHaven Zoo</h1>

    <!-- Slideshow Dots -->
    <div class="slideshow-dots">
        @for (int i = 0; i < Images.Length; i++)
        {
            <button class="dot @(i == currentImageIndex ? "active" : "")" @onclick="() => ChangeSlideshowImage(i)"></button>
        }
    </div>
</div>

<!-- Info Cards Section -->
<div class="info-cards">
    <div class="info-card">
        <img src="images/clock.png" alt="Clock Icon" class="info-card-image" />
        <p>Opening Times</p>
        <p class="card-description">We are open daily from 9 AM to 6 PM. Visit us and enjoy a full day of adventure!</p>
    </div>
    <div class="info-card">
        <img src="images/tickets.png" alt="Ticket Icon" class="info-card-image" />
        <p>Plan Your Visit</p>
        <p class="card-description">Get your tickets online and skip the queue! Check our website for ticket prices and more.</p>
    </div>
    <div class="info-card">
        <img src="images/map.png" alt="Map Icon" class="info-card-image" />
        <p>Zoo Map</p>
        <p class="card-description">Download our interactive zoo map to plan your visit and explore our attractions.</p>
    </div>
    <div class="info-card">
        <img src="images/location.png" alt="Location Icon" class="info-card-image" />
        <p>Location</p>
        <p class="card-description">We are located at the heart of the city. Find us easily using Google Maps or our location guide.</p>
    </div>
</div>


<!-- Membership & Ticket Section -->
<div class="membership">
    <h2>Become a WildHaven Member</h2>
    <p>Enjoy exclusive benefits, including free entry, discounts on events, and more!</p>
    <a href="/shop" class="cta-button">Join Now</a>
</div>

<!-- Upcoming Events Section -->
<div class="upcoming-events">
    <h2>Upcoming Events</h2>
    <ul>
        <li><strong>Wild Animal Parade:</strong> December 10, 2024</li>
        <li><strong>Zoo Night Safari:</strong> January 5, 2025</li>
        <li><strong>Animal Feeding Time:</strong> February 14, 2025</li>
    </ul>
</div>

@code {
    private string[] Images = new string[] {
        "images/tiger-in-zoo.jpg",
        "images/lion-in-zoo.jpg",
        "images/deer-in-zoo.jpg",
        "images/giraffe-in-zoo.jpg"
    };

    private int currentImageIndex = 0;

    private void ChangeSlideshowImage(int index)
    {
        currentImageIndex = index;
    }
}

<style>
    /* Hero Section */
    .hero {
        position: relative;
        height: 500px;
        overflow: hidden;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero h1 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 4rem;
        font-family: 'Comic Sans MS', cursive;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* Slideshow Dots */
    .slideshow-dots {
        position: absolute;
        bottom: 5rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.6);
        border: none;
        cursor: pointer;
    }

        .dot.active {
            background-color: white;
        }

    /* Info Cards */
    .info-cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        max-width: 1200px;
        margin: -4rem auto 0;
        padding: 0 1rem;
        position: relative;
        z-index: 10;
    }

    .info-card {
        background-color: #5B7553;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        color: white;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .info-card:hover {
            transform: translateY(-0.25rem);
        }

        .info-card i {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .info-card p {
            font-size: 1.125rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .info-card .card-description {
            font-size: 1rem;
            margin-top: 0.5rem;
            color: white;
        }

    .info-card-image {
        width: 50px;
        height: 50px;
        margin-bottom: 0.5rem;
    }


    /* Membership Section */
    .membership {
        background-color: #4A6244;
        padding: 2rem;
        border-radius: 0.5rem;
        text-align: center;
        color: white;
        margin-top: 2rem;
    }

        .membership h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .membership .cta-button {
            background-color: #D4A017;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-size: 1.125rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .membership .cta-button:hover {
                background-color: #B78913;
            }

    /* Upcoming Events Section */
    .upcoming-events {
        margin-top: 2rem;
        background-color: #4A6244;
        padding: 2rem;
        border-radius: 0.5rem;
        color: white;
    }

        .upcoming-events h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .upcoming-events ul {
            list-style: none;
            padding: 0;
        }

        .upcoming-events li {
            font-size: 1.125rem;
            margin-bottom: 0.5rem;
        }

            .upcoming-events li strong {
                color: #D4A017;
            }
</style>